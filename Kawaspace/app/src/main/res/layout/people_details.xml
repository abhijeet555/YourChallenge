<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/home_product_linear_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="1dp"
  android:orientation="vertical"
  android:padding="15dp">

  <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_image"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:scaleType="centerCrop"
    app:civ_border_color="@color/grey"
    app:civ_border_width="3dp" />

  <TextView
    android:id="@+id/people_details_name_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:maxLines="1"
    android:textColor="@color/orange"
    android:textSize="18sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/people_details_address_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:maxLines="2"
    android:textColor="@color/black"
    android:textSize="15sp" />

  <TextView
    android:id="@+id/people_details_time_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:maxLines="2"
    android:textColor="@color/black"
    android:textSize="15sp" />

  <TextView
    android:id="@+id/people_detailse_email_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:maxLines="1"
    android:singleLine="true"
    android:textColor="@color/grey_100"
    android:textSize="15sp" />

</LinearLayout>
